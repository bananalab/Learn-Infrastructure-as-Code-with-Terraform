{
  "name": "devcontainer",
  "image": "bananalab/devcontainer",
  "mounts": [
      "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "containerUser": "devcontainer",
  "remoteUser": "devcontainer",
  "customizations": {
    "vscode": {
        "extensions": [
            "hashicorp.hcl",
            "hashicorp.terraform"
        ],
        "settings": {
          "editor.formatOnPaste": true,
          "editor.formatOnSave": true
        }
    }
  }
}